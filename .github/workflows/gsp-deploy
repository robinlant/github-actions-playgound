name: Deploy Docker Image from Docker Hub to GCP

on:
  push:
    branches: [main, testing-actions]

jobs:
  deploy:
    runs-on: ubuntu-latest

    env: 
      GCP_PROJ_ID: t-diagram-422507-k9
      IMAGE_NAME: robinlant/github-actions-playground
      IMAGE_TAG: latest
      GCP_SERVICE_NAME: counter

    steps:
      - name: Echo Event Name
        run: echo "The job was automatically triggered by a ${{ github.event_name }} event"

      - name: Checkout code
        uses: actions/checkout@v2

      - name: Log in to GCP
        uses: google-github-actions/auth@v2
        with:
          credentials_json: '${{ secrets.GSP_SA_KEY_DEV }}'

      - name: Deploy to Cloud Run
        uses: google-github-actions/deploy-cloudrun@v2
        with:
          image: docker.io/${{ env.IMAGE_NAME }}:${{ env.IMAGE_TAG }}
          service: ${{ env.GCP_SERVICE_NAME }}

      - name: 'Use output'
        run: 'curl "${{ steps.deploy.outputs.url }}"'